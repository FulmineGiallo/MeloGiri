<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/textCarrello"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Carrello"
    android:textSize="65dp"
    android:textColor="@color/black"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="10dp"
    >
</TextView>
    <FrameLayout
        android:id="@+id/frameCarrello"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/grigiobottone"
        app:layout_constraintTop_toBottomOf="@id/textCarrello"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
    <TextView
        android:id="@+id/textTotale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Totale"
        android:textSize="40dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/frameCarrello"
        ></TextView>
    <TextView
        android:id="@+id/textPrezzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$144.9"
        app:layout_constraintTop_toBottomOf="@id/textTotale"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="100dp"
        android:textSize="20dp"
        ></TextView>
    <Button
        android:id="@+id/checkoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        app:layout_constraintLeft_toRightOf="@id/textPrezzo"
        app:layout_constraintTop_toTopOf="@id/textPrezzo"
        app:layout_constraintBottom_toBottomOf="@id/textPrezzo"
        android:layout_marginLeft="60dp"
        >

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>